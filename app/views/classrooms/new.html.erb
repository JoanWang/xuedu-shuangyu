<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam" />
  <h1><%= t 'School' %></h1>
  <h3><%= t 'New_classroom' %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to t('School'), schools_path %> &raquo;
      <%= link_to @school.full_name, @school %> &raquo;
      <%= t 'New_classroom' %> 
    </div>

    <% form_for [@school, @classroom] do |f| %>
      <%= error_messages_for :classroom %>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label :name %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label :code %></div>
        <div class="input-container"><%= f.text_field :code %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label :seats %></div>
        <div class="input-container"><%= f.text_field :seats %></div>
      </div>

      <%= submit_tag "", :value => "► 保存", :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>

  </div></div>
