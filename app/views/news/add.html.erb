<div id="content-header">
  <img src="/images/manage_news/manage_news_logo.png" />
  <h1><%= t 'Add_news' %></h1>
  <h3><%= t 'Publish_news' %></h3>
  <div id="app-back-button">
	<%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :news do |f| %>

    <%= error_messages_for :news %>

    <div id="add_news_form">
      <div class="news_label_field">
        <%= f.label :title %>
        <div id="news_title_text_field_bg"><%= f.text_field :title %></div>
      </div>

      <div class="news_label_field">
        <%= f.label :content %>
        <div id="news_content_text_field_bg"><%= fckeditor_textarea :news, :content %></div>
      </div>
    </div>

    <%= submit_tag "", :value => "► 发布学校新闻", :class => "news_publish_button" %>

  <% end %>

</div>
