<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam" />
  <h1><%= t 'Courses' %></h1>
  <h3><%= t 'New_batch' %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to t('Courses'), courses_path %> &raquo;
      <%= link_to @course.full_name, @course %> &raquo;
      <%= t 'New_batch' %>
    </div>

    <% form_for [@course, @batch] do |f| %>
      <%= error_messages_for :batch %>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label_require :name %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label_require :start_date %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[start_date]', Date.today %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label_require :end_date %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[end_date]', Date.today + 1.year %></div>
      </div>

      <%= submit_tag "", :value => "► 保存", :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>

  </div></div>
