<div id="content-header">
  <img src="/images/student_details/student_details_logo.jpg" />
  <h1><%= t 'Students' %></h1>
  <h3><%= t 'delete_student' %></h3>
  <div id="app-back-button">
     <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <div id="student-details">
    <h3><%= @student.full_name %></h3>
    <h4>学号: <%= @student.admission_no %></h4>
    <h4>班级: <%= @student.batch.course_name %></h4>
  </div>

  <div class="extender"> </div>
  <% if @student.is_active == true %>
  <div class="link-box">
    <div class="link-heading"> <%= link_to t("Student_leave_institute"), :controller => "student", :action => "change_to_former", :id => @student.id %> </div>
    <div class="link-descr"><%= t 'descripe' %></div>
  </div>
  <% else %>
    <div class="link-box">
    <div class="link-heading"> <a><%= t 'Student_left' %></a> </div>
    <div class="link-descr"><b>原因:</b><%= @student.status_description %> </div>
  </div>
    <% end %>
  <div class="link-box">
    <div class="link-heading"> <%= link_to t("delete_student"), :controller => "student", :action => "delete", :id => @student.id %> </div>
    <div class="link-descr"><%= t 'delete_descripe' %></div>
  </div>

