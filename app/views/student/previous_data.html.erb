<div id="content-header">
  <img src="/images/admission/admission_page_logo.jpg" />
  <h1><%= t 'student.Admission' %></h1>
  <h3><%= t 'student_previous_data.previous_detail' %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <% form_for :student_previous_details do |a| %>
  <%#= error_messages_for 'employee_bank_details' %>

    <span class="span-sub-heading"><%= t 'student_previous_data.previous_education' %></span>
    <hr class="sub-heading"></hr>
    <div id="form-contents">
      <%= a.hidden_field :student_id, :value => @student.id %>
      <div class="label-field-pair">
        <%= a.label :institution %>
        <div class="text-input-bg"><%= a.text_field :institution %></div>
        <div class="extender"></div>
      </div>
      <div class="label-field-pair">
        <%= a.label :course %>
        <div class="text-input-bg"><%= a.text_field :course %></div>
        <div class="extender"></div>
      </div>
      <div class="label-field-pair">
        <%= a.label :year %>
        <div class="text-input-bg"><%= a.text_field :year %></div>
        <div class="extender"></div>
      </div>
      <div class="label-field-pair">
        <%= a.label :total_mark %>
        <div class="text-input-bg"><%= a.text_field :total_mark %></div>
        <div class="extender"></div>
      </div>
      <div class="save-proceed-button">
        <%= link_to "► 跳过", {:controller => "student", :action => "admission4", :id => @student.id },:class=>'skip' %>

        <%= submit_tag "", :value => "► 保存 & 继续前进", :class => "submit_button" %>

      </div>
    </div>
  <% end %>
  <div class="ajax-subject">
    <ul id="added-subjects">
<%  unless @previous_subject.nil? %>
<% @previous_subject.each  do |p| %>

<li><div class="name"><%= p.subject %></div><div class="val"><span>:</span><%= p.mark %></div></li>

<% end %>
  <% end %>
    </ul>
    <%= link_to_remote "添加课目", :url=>{:controller=>"student",:action=>"previous_subject", :id=>@student.id}%>
    <div id="subject">

    </div>
  </div>
</div>
