<div id="content-header">
    <img src="/images/show_settings.png" />
  <h1><%= t 'School' %></h1>
  <h3><%= t 'Manage_classroom'%></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to t('Subjects'), subjects_path %> </li>
  </ul>
</div>

<div id="page-yield">
    <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

<div class="box">
<div class="label-field-pair">
   <label for="student_compus"><%= t 'Select_a_compuse'%>:
<%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>
   </label>
   <div class="text-input-bg">
  <%= select :school, :name,
        School.active.map {|c| [c.school_name, c.id]},
        {:prompt => t('Select_a_compuse')},
        {:onChange => "#{remote_function(:url => {:action => "update_classroom"},
        :with => "'school_name='+ value",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"
        )}"} %>
</div></div>

<div id="update_classroom" ></div>
  <div class="extender"></div>
  </div>
</div>
